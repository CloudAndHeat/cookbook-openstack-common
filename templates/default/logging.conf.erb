[loggers]
keys=root,ceilometer,cinder,glance,horizon,keystone,nova,swift

[formatters]
keys=normal,normal_with_name,debug

[handlers]
keys=devel,ceilometer_prod,cinder_prod,glance_prod,horizon_prod,keystone_prod,nova_prod,swift_prod,ceilometer_debug,cinder_debug,glance_debug,horizon_debug,keystone_debug,nova_debug,swift_debug

## FORMATTERS ##

[formatter_normal]
format=%(asctime)s %(levelname)s %(message)s

[formatter_normal_with_name]
format=(%(name)s): %(asctime)s %(levelname)s %(message)s

[formatter_debug]
format=(%(name)s): %(asctime)s %(levelname)s %(module)s %(funcName)s %(message)s

## LOGGERS ##

[logger_root]
level=NOTSET
handlers=devel

[logger_ceilometer] # LOCAL0
level=DEBUG
handlers=ceilometer_prod,ceilometer_debug
qualname=ceilometer

[logger_cinder] # LOCAL1
level=DEBUG
handlers=cinder_prod,cinder_debug
qualname=cinder

[logger_glance] # LOCAL2
level=DEBUG
handlers=glance_prod,glance_debug
qualname=glance

[logger_horizon] # LOCAL3
level=DEBUG
handlers=horizon_prod,horizon_debug
qualname=horizon

[logger_keystone] # LOCAL4
level=DEBUG
handlers=keystone_prod,keystone_debug
qualname=keystone

[logger_nova] # LOCAL5
level=DEBUG
handlers=nova_prod,nova_debug
qualname=nova

[logger_swift] # LOCAL6
level=DEBUG
handlers=swift_prod,swift_debug
qualname=swift

## HANDLERS ##

[handler_devel]
class=StreamHandler
level=NOTSET
formatter=debug
args=(sys.stdout,)

[handler_file]
class=FileHandler
level=DEBUG
formatter=normal_with_name
args=('/var/log/openstack/openstack.log', 'w')

[handler_ceilometer_prod]
class=handlers.SysLogHandler
level=ERROR
formatter=normal_with_name
args=(('/dev/log'), handlers.SysLogHandler.LOG_LOCAL0)

[handler_ceilometer_debug]
class=handlers.SysLogHandler
level=DEBUG
formatter=debug
args=(('/dev/log'), handlers.SysLogHandler.LOG_LOCAL0)

